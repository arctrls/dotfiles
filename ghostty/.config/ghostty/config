font-size = 14
# Dracula
# Afterglow arcoiris Arthur Desert Earthsong
# Ayu Mirage
shell-integration-features = no-cursor, sudo,no-title
cursor-style = block
# adjust-cell-height = 5%

# Hide the mouse immediately when typing. The mouse becomes visible again
# may dictate other scenarios where the mouse is shown. For example on macOS,3
# the mouse is shown again when a new window, tab, or split is created.
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2


# keybindings
keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface
keybind = cmd+s>n=new_window
# tabs
keybind = cmd+s>c=new_tab
keybind = cmd+s>shift+l=next_tab
keybind = shift+enter=text:\n
